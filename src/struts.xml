<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
"http://struts.apache.org/dtds/struts-2.3.dtd">

<!-- Strutsの詳細設定 -->
<struts>
	<constant name="struts.devMode" value="true" />
	<!-- 対象のpackageを設定 -->
	<package name="com.internousdev.template.action" extends="struts-default">



		<!-- ItemAction -->
		<action name="ItemAction" class="com.internousdev.template.action.ItemAction" method="execute">

			<result name="success">item.jsp</result>
		</action>

			<!-- CartAction -->
		<action name="CartAction" class="com.internousdev.template.action.CartAction" method="execute">

			<result name="success">cart.jsp</result>
		</action>


		<!-- LoginAction -->
		<action name="LoginAction" class="com.internousdev.template.action.LoginAction" method="execute">

			<result name="success">login.jsp</result>
		</action>

				<!-- SearchAction -->
		<action name="SearchAction" class="com.internousdev.template.action.SearchAction" method="execute">

			<result name="success">search.jsp</result>
		</action>
				<!-- SearchAction2 -->
		<action name="SearchAction2" class="com.internousdev.template.action.SearchAction2" method="execute">
		<result name="info">info.jsp</result>
			<result name="success">search.jsp</result>
		</action>

					<!-- AddressAction -->
		<action name="AddressAction" class="com.internousdev.template.action.AddressAction" method="execute">

			<result name="success">address.jsp</result>
		</action>

		<!-- ShipAction -->
		<action name="ShipAction" class="com.internousdev.template.action.ShipAction" method="execute">

			<result name="success">ship.jsp</result>
		</action>

				<!-- PayAction -->
		<action name="PayAction" class="com.internousdev.template.action.PayAction" method="execute">

			<result name="success">pay.jsp</result>
		</action>


				<!-- ConfirmAction -->
		<action name="ConfirmAction" class="com.internousdev.template.action.ConfirmAction" method="execute">

			<result name="success">confirm.jsp</result>
		</action>


					<!-- ComplateAction -->
		<action name="ComplateAction" class="com.internousdev.template.action.ComplateAction" method="execute">

			<result name="success">complate.jsp</result>
		</action>




	</package>
</struts>